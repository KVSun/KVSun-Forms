{
  "name": "KVSun-Forms",
  "version": "0.0.0",
  "description": "A collection of forms for the Kern Valley Sun",
  "keywords": ["KV Sun", "forms", "HTML"],
  "author": {
    "name": "Chris Zuber",
    "email": "shgysk8zer0@gmail.com",
    "url": "https://chriszuber.com"
  },
  "contributors": [],
  "homepage": "http://www.kernvalleysun.com",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/KVSun/KVSun-Forms/"
  },
  "bugs": {
    "url": "https://github.com/KVSun/KVSun-Forms/issues/"
  },
  "engines": {
    "php": ">=5.5",
    "npm": ">=3.5"
  },
  "scripts": {
    "build:css": "myth stylesheets/styles/import.css -c stylesheets/styles/styles.css",
    "build:js": "webpack",
    "build:icons": "svg-sprite-generate -d images/octicons/lib/svg -o images/icons.svg",
    "build:all": "npm run build:css && npm run build:js && npm run build:icons",
    "lint:js": "eslint  --ext .es6 .",
    "lint:php": "php unit.php",
    "update": "git submodule update --init --recursive && git fetch --all --tags --prune && npm run build:all",
    "test": "npm run lint:php && npm run lint:js",
    "postinstall": "npm run update"
  },
  "devDependencies": {
    "babel-core": "^6.7.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "eslint": "^2.3.0",
    "myth": "^1.5.0",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^0.6.2",
    "webpack": "^1.12.14"
  }
}
